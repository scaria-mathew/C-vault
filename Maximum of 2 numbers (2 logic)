
1st Logic

#include <stdio.h>
int main()
{
    int a,b,c;
    printf("Enter the two numbers: ");
    scanf("%d%d", &a,&b);
    c = a>b?a:b;
    printf("The maximum is %d", c);
    return 0;
}

2nd Logic

#include <stdio.h>
int main()
{
    int a,b;
    printf("Enter the two numbers: ");
    scanf("%d%d", &a,&b);
    if (a>b)
    {
        printf("The maximum is %d", a);
    }
    else
    {
        printf("The maximum is %d", b);
    }
    return 0;
}
